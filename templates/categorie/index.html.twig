{% extends 'base.html.twig' %}

{% block title %}Page edition de categorie {% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; width: 95%; font: 14px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .example-wrapper table { text-align: center; margin-top: 35px;}
        .example-wrapper thead { font-size: 14px;}
        .example-wrapper tbody { font-size: 12px;}
        .add {text-align: center;}
    </style>

    <div class="example-wrapper">


    <!-- Ici bloc sous le menu : Description et lien ajout -->
    <div class="row">
        <div class="card border-secondary" style="width: 66rem;">
            <div class="card-body">
                <h1 class="card-title"> Liste des categories </h1>
            </div>
            <div class="card-header">
                <div>
                    <a href="{{ path('home') }}" class="btn btn-secondary">Retour sur accueil</a>
                    <a href="#" class="btn btn-secondary">COMPTES</a>
                </div>
            </div>
        </div>

        <div class="card border-success add" style="width: 16rem;">
            <div class="card-body">
                <h5>Ajouter une categorie </h5>
                <button  type="button" class="btn btn-success">
                    <a href="{{ path('categorie-ajout') }}" style="color:white">
                    <i class="fas fa-user-plus"></i>
                    </a>
                </button>
            </div>
        </div>

    </div>

    <div class="card-body">
        <table class="table table-hover">
            <thead>
            <tr class="table-active">
                <th scope="col">CATEGORIE</th>
                <th scope="col">MODIFICATION</th>
            </tr>
            </thead>
            <tbody class="table">


            {% for categorie in categories %}
            <tr>
                <th scope="row">
                    {{ categorie.titre }}
                </th>
                <td>
                    <button type="button" class="btn btn-outline-primary"> <a href="{{ path('categorie-modifier', {'categorie': categorie.id}) }}"> <i class="fas fa-user-edit"></i>  </a>  </button>
                                        <a href="#"> {% include 'modal/delete-categorie.html.twig' with {'name': 'modal-delete'} %} </a>
                </td>
                {% endfor %}

            </tr>
            </tbody>
        </table>
    </div>

{% endblock %}